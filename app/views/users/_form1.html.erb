
<% if @user.errors.any? %>
       <h2>The following errors prevented the user from getting created</h2>
          <ul>
           <% @user.errors.full_messages.each do |msg| %>
           <li><h2><%= msg %></h2></li>
          <% end %>
        </ul>
   <% end %>
      <div class='row'>
       <div class='col-xs-12'>
          <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
             <div class="form-group">
               <div class="control-label col-sm-2">
               <%= f.label :username %>
                </div>
               <div class="col-sm-8">
             <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
              </div>
              </div>
             <div class="form-group">
               <div class="control-label col-sm-2">
                 <%= f.label :email %>
               </div>
             <div class="col-sm-8">
               <%= f.email_field :email, class: "form-control", placeholder: "Enter the e-mail" %>
             </div>
            </div>
            <div class="form-group">
               <div class="control-label col-sm-2">
                 <%= f.label :phone %>
               </div>
             <div class="col-sm-8">
               <%= f.text_field :phone, class: "form-control", placeholder: "Enter Phone Number" %>
             </div>
            </div>
            <div class="form-group">
               <div class="control-label col-sm-2">
                 <%= f.label :address %>
               </div>
             <div class="col-sm-8">
               <%= f.text_field :address, class: "form-control", placeholder: "Enter the Address" %>
             </div>
            </div>
            <div class="form-group">
               <div class="control-label col-sm-2">
                 <%= f.label :occupation %>
               </div>
             <div class="col-sm-8">
               <%= f.text_field :occupation, class: "form-control", placeholder: "Enter the Occupation" %>
             </div>
            </div>
            <div class="form-group">
               <div class="control-label col-sm-2">
                 <%= f.label :avatar %>
               </div>
             <div class="col-sm-8">
               <%= f.file_field :avatar, class: "form-control", placeholder: "Upload profile Image" %>
             </div>
            </div>
          <div class="form-group">
               <div class="control-label col-sm-2">
                 <%= f.label :password %>
               </div>
             <div class="col-sm-8">
               <%= f.password_field :password, class: "form-control", placeholder: "Enter the password" %>
             </div>
            </div>
           <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
           </div>
         </div>
            <% end %>
<div class="col-xs-4 col-xs-offset-4">
[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
</div>
</div>